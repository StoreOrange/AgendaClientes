@{
    ViewData["Title"] = "Clientes";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 10px 20px;
            color: white;
        }
        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px;
        }
        .navbar a:hover {
            background-color: #575757;
        }
        .hamburger-menu {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            width: 30px;
            height: 24px;
            cursor: pointer;
        }
        .bar {
            width: 100%;
            height: 3px;
            background-color: white;
            border-radius: 10px;
            transition: all 0.3s;
        }
        .nav-menu {
            display: none;
            flex-direction: column;
            align-items: center;
            background-color: #333;
            position: absolute;
            top: 50px;
            right: 10px;
            width: 200px;
            border-radius: 5px;
            z-index: 9;
        }
        .nav-menu a {
            color: white;
            text-decoration: none;
            padding: 10px;
            width: 100%;
            text-align: center;
            border-bottom: 1px solid #444;
        }
        .nav-menu a:last-child {
            border-bottom: none;
        }
        .nav-menu a:hover {
            background-color: #444;
        }
        .show {
            display: flex;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/clientes/index">Clientes</a>
        <a href="/empleado/index">Empleado</a> 
        <div class="hamburger-menu" onclick="toggleMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
        <nav class="nav-menu" id="navMenu">
            <a href="/">Home</a>
            <a href="/clientes/index">Clientes</a>
            <a href="/empleado/index">Empleado</a> 
        </nav>
    </div>

    <script>
        // JavaScript para el menú de hamburguesa
        function toggleMenu() {
            var menu = document.getElementById('navMenu');
            menu.classList.toggle('show');
        }
    </script>
</body>
</html>
