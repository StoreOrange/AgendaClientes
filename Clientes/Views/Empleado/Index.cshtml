@model IEnumerable<Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<h1 class="mb-4">Lista de Empleados</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo Empleado</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Fecha de Nacimiento</th>
                <th>Departamento</th>
                <th>Municipio</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Celular</th>
                <th>Correo</th>
                <th>Fecha de Ingreso</th>
                <th>Profesión</th>
                <th>Puesto</th>
                <th>Salario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Cedula)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Nombres)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Apellidos)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.FechaDeNacimiento)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Departamento)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Municipio)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Dirección)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Teléfono)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Celular)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Correo)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.FechaDeIngreso)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Profesión)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Puesto)</span></td>
                    <td><span class="small">@Html.DisplayFor(modelItem => item.Salario)</span></td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Acciones">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
